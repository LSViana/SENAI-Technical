<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="sstorage.mobile.senai.com.sstorage">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".view.StartActivity"
            android:label="@string/title_activity_start"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".view.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.MainAdminActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".view.EnvironmentsActivity"
            android:label="@string/title_activity_environments"
            android:theme="@style/EnvironmentsTheme" />
        <activity
            android:name=".view.PatrimoniesActivity"
            android:label="@string/title_activity_patrimonies"
            android:theme="@style/PatrimoniesTheme" />
        <activity
            android:name=".view.PatrimonyItemsActivity"
            android:label="@string/title_activity_patrimony_items"
            android:theme="@style/PatrimoniesTheme" />
        <activity
            android:name=".view.MovePatrimonyItemActivity"
            android:label="@string/title_activity_move_patitem"
            android:theme="@style/MovementsTheme"
            />
    </application>

</manifest>